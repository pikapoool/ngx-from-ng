{
    "extends": ["codelyzer"],
    "rules": {
        "prefer-const": true,
        "quotemark": [
            true,
            "double"
        ],
        "radix": true,
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ]
    }
}